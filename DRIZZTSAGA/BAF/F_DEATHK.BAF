IF
	See([PC])
	Global("F_Fireball","GLOBAL",0)
THEN
	RESPONSE #100
		ReallyForceSpell([PC],WIZARD_DISPEL_MAGIC)
		Wait(2)
		ReallyForceSpell([PC],RED_FIREBALL)
		SetGlobal("F_Fireball","GLOBAL",1)
END

IF
	Global("F_DeathFight","GLOBAL",0)
	See([PC])
THEN
	RESPONSE #100
		ReallyForceSpell([PC],POWERWORD_STUN)
		Wait(2)
		AttackOneRound(NearestEnemyOf(Myself))
		SetGlobal("F_DeathFight","GLOBAL",1)
END

IF
	Global("F_DeathFight","GLOBAL",1)
	See([PC])
THEN
	RESPONSE #100
		ReallyForceSpell(NearestEnemyOf(Myself),POWERWORD_KILL)
		SetGlobal("F_DeathFight","GLOBAL",2)
		Wait(2)
END

IF
	Global("F_DeathFight","GLOBAL",2)
	See([PC])
THEN
	RESPONSE #100
		ReallyForceSpell(NearestEnemyOf(Myself),WIZARD_DISPEL_MAGIC)
		Wait(2)
		ForceSpell([PC],RED_FIREBALL)
		AttackOneRound(NearestEnemyOf(Myself))
		AttackOneRound(NearestEnemyOf(Myself))
		Wait(1)
		SetGlobal("F_DeathFight","GLOBAL",3)
END

